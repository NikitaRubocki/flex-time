%h2.display-3= truncate @activity.name, length: 34

%nav
  = link_to 'Back', activities_path, class: 'btn btn-outline-secondary'
  = link_to 'Edit', edit_activity_path(@activity), class: 'btn btn-outline-primary'

%h3.display-4.mt-5
  = l @activity.date, format: :without_year
  in #{@activity.room}
  %span.badge.badge-pill.badge-light.text-muted= Random.new.rand(@activity.capacity)
  %span.badge.badge-pill.badge-secondary.h4= @activity.capacity
