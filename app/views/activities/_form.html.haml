- if @activity.errors.any?
  #error_explanation
    %h2= "#{pluralize(@activity.errors.count, "error")} prohibited this activity from being saved:"
    %ul
      - @activity.errors.full_messages.each do |message|
        %li= message

= form_for @activity do |f|
  .row
    .col-md-6.form-group
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .col-md-4.form-group
      = f.label :room
      = f.text_field :room, class: 'form-control'
    .col-md-2.form-group
      = f.label :capacity
      = f.number_field :capacity, class: 'form-control'
  .row
    .col-md-3.form-group
      = f.label :date
      = f.select :humanized_date, options_for_select(@dates, params[:date] || @activity.date.to_s), {class: 'form-control'}
    .col-md-3.form-group
      = f.submit class: 'btn btn-success'
