%h2.display-3= @teacher

%nav.mt-3
  = link_to 'Back', teachers_path, class: 'btn btn-outline-secondary'
  = link_to 'Edit', edit_teacher_path(@teacher), class: 'btn btn-outline-primary'

%h3.display-4.mt-5
  Students
  %span.badge.badge-pill.badge-secondary.font-weight-light= @teacher.students.count

%table.table
  %thead
    %th Student
    %th Tuesday
    %th Thursday
    %th Friday
  %tbody
    - @teacher.students.each do |student|
      %tr{ id: "student_#{student.id}"}
        %td.student= link_to student.to_s, student_path(student, date: @date)
        %td.tuesday= student.activity_for_day_of_week(:tuesday, @date)&.name
        %td.thursday= student.activity_for_day_of_week(:thursday, @date)&.name
        %td.friday= student.activity_for_day_of_week(:friday, @date)&.name
